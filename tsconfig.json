{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": false,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "target": "ES2018",
    "jsx": "react",
    "lib": ["DOM", "ES2022"]
  },
  "include": ["./src/**/*", "*.mts"]
}
