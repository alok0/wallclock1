{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/vite-react/tsconfig.json"
  ],
  "compilerOptions": {
    "allowJs": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "exactOptionalPropertyTypes": false,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": ["public"],
  "include": ["./src/**/*", "*.mts"]
}
